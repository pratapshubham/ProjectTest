<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_height_160dp"
    android:background="@color/colorPurple_A400"
    android:orientation="vertical"
    android:padding="@dimen/padding_10dp"
    >

        <ImageView
            android:id="@+id/img_navigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:src="@mipmap/img_navigation_drawer"
            />

    <TextView
        android:id="@+id/txt_displayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top5"
        android:text="@string/drawer_name"
        android:textSize="@dimen/text_size20"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:padding="@dimen/padding_10dp"
        />


</LinearLayout>